<div class="fixed-plugin">
    <div class="card shadow-lg">
        <div class="card-header pb-0 pt-3 ">
            <div class="float-start">
                <h5 class="mt-3 mb-0">Account Settings</h5>
            </div>
            <div class="float-end mt-4">
                <button class="btn btn-link text-dark p-0 fixed-plugin-close-button">
                    <i class="fa fa-close"></i>
                </button>
            </div>
            <!-- End Toggle Button -->
        </div>
        <hr class="horizontal dark my-1">
        <div class="card-body pt-sm-3 pt-0 overflow-auto">
            <!-- Sidebar Backgrounds -->
            <div>
                <h6 class="mb-0">Full Name</h6>
            </div>
            <a href="javascript:void(0)" class="switch-trigger background-color">
                <div class="badge-colors my-2 text-start">
                    <button style="text-align: left;" type="button" class="btn btn-outline-dark w-100  btn-tooltip "
                        disabled data-bs-toggle="tooltip" data-bs-placement="top" title="Click to Copy!"
                        data-container="body" data-animation="true" href="javascript:void(0)"
                        onclick="copyToClipboard('<%= req.session.userinfo.username%>')">
                        <%= req.session.userinfo.username%>
                    </button>
                </div>
            </a>
            <!-- Sidenav Type -->
            <div>
                <h6 class="mb-0">Username</h6>
            </div>
            <a href="javascript:void(0)" class="switch-trigger background-color">
                <div class="badge-colors my-2 text-start">
                    <a style="text-align: left;" class="btn btn-outline-dark w-100  btn-tooltip"
                        data-bs-toggle="tooltip" data-bs-placement="top" title="Click to Copy!" data-container="body"
                        data-animation="true" href="javascript:void(0)"
                        onclick="copyToClipboard('<%= req.session.userinfo.id%>')">
                        <%= req.session.userinfo.id%>
                    </a>
                </div>
            </a>
            <div>
                <h6 class="mb-0">Email</h6>
            </div>
            <a href="javascript:void(0)" class="switch-trigger background-color">
                <div class="badge-colors my-2 text-start">
                    <a style="text-align: left;" class="btn btn-outline-dark w-100  btn-tooltip"
                        data-bs-toggle="tooltip" data-bs-placement="top" title="Click to Copy!" data-container="body"
                        data-animation="true" href="javascript:void(0)"
                        onclick="copyToClipboard('<%= req.session.userinfo.email%>')">
                        <%= req.session.userinfo.email%>
                    </a>
                </div>
            </a>
            <!-- Navbar Fixed -->
            <div>
                <h6 class="mb-0">Password</h6>
            </div>
            <a href="javascript:void(0)" class="switch-trigger background-color">
                <div style="text-align: left;" class="d-flex badge-colors my-2 text-start">
                    <input style="text-align: left; margin-right: 7%;" type="password" id="example-password-input"
                        class="btn btn-outline-dark w-100 px-3  btn-tooltip" data-bs-toggle="tooltip"
                        data-bs-placement="top" title="Click to Copy!" data-container="body" data-animation="true"
                        href="javascript:void(0)" onclick="copyToClipboard('<%= password.password %>')"
                        value="<%= password.password %>">

                    </input>
                    <button style="margin-right: 2%;" class="btn btn-outline-secondary" type="button"
                        id="toggle-password-visibility">
                        <i class="fas fa-eye-slash"></i>
                    </button>

                </div>
                <a href="javascript:void(0)">
                    <div class="text-sm" style="text-align:center;">
                        <div>
                            <p type="button" class="btn text-sm btn-default mb-3" data-bs-toggle="modal"
                                data-bs-target="#modal-form">Change Password?
                            </p>

                        </div>
                    </div>
                </a>
            </a>
        </div>
    </div>

    <div class="ps__rail-x" style="left: 0px; bottom: 0px;">
        <div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div>
    </div>
    <div class="ps__rail-y" style="top: 0px; right: 0px;">
        <div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 0px;"></div>
    </div>
    <div class="ps__rail-x" style="left: 0px; bottom: 0px;">
        <div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div>
    </div>
    <div class="ps__rail-y" style="top: 0px; right: 0px;">
        <div class="ps__thumb-y" tabindex="0" style="top: 0px; height: 0px;"></div>
    </div>